<div class="form-group">
  <label for="title">Title</label>
  <input required value="<%= event.title %>" type="text" name="title" id="title" class="form-control">
</div>
<div class="form-group">
  <label for="date">Date</label>
  <textarea name="date" id="date" class="form-control"><%= event.date %></textarea>
</div>
<div class="form-group">
  <label for="time">Time</label>
  <textarea required name="time" id="time" class="form-control"><%= event.time %></textarea>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>